<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="plotClassAssignments-png" version="1.0.0" displayName="plotClassAssignments-png" />
    <documentation>
        <description>Visualizes class assignments for given alternatives as an image.</description>
        <contact><![CDATA[Maciej Uniejewski <maciej.uniejewski@gmail.com>]]></contact>
        <url>https://github.com/maciej7777/PrometheeDiviz</url>
    </documentation>
    <parameters>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Alternatives to consider.</description>
            </documentation>
            <xmcda tag="alternatives" />
        </input>

        <input id="input2" name="categories" displayName="categories" isoptional="0">
            <documentation>
                <description>Definitions of categories.</description>
            </documentation>
            <xmcda tag="categories" />
        </input>

        <input id="input4" name="assignments" displayName="assignments" isoptional="0">
            <documentation>
                <description>Assignments of alternatives to given classes.</description>
            </documentation>
            <xmcda tag="alternativesAssignments" />
        </input>

        <input id="input3" name="categories_values" displayName="categories marks" isoptional="0">
            <documentation>
                <description>Marks of categories (higher mark means better category). Each category need to have unique mark from 1 to C, where C is a number of categories.</description>
            </documentation>
            <xmcda tag="categoriesValues" />
        </input>

        <input id="input5" name="method_parameters" displayName="method parameters" isoptional="0">
            <documentation>
                <description>A set of parameters provided to tune up the module's operation.</description>
            </documentation>
            <xmcda tag="programParameters"><![CDATA[
                
                <programParameters>
                    <parameter id="visualizationType">
                        <values>
                            <value>
                                <label>%1</label>
                            </value>
                        </values>
                    </parameter>
                </programParameters>
       
            ]]></xmcda>
            <gui status="preferGUI">
                <entry id="%1" type="enum" displayName="Visualization type">
                    <documentation>
                        <description>Information of the chosen type of visualization.</description>
                    </documentation>
                    <items>
                        <item id="normal">
                            <description>normal</description>
                            <value>normal</value>
                        </item>
                        <item id="dashed">
                            <description>dashed</description>
                            <value>dashed</value>
                        </item>
                    </items>
                    <defaultValue>normal</defaultValue>
                </entry>
            </gui>
        </input>

        <output id="assignments_png" name="assignments.png" displayName="visualization">
            <documentation>
                <description>Visualization of assignments as an image.</description>
            </documentation>
            <xmcda />
        </output>

        <output id="output2" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="programExecutionResult" />
        </output>

    </parameters>
</program_description>
