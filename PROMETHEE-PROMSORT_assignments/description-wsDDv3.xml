<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://www.decision-deck.org/2009/XMCDA-2.0.0 http://www.decision-deck.org/ws/_downloads/description.xsd">
    <program provider="PUT" name="PROMETHEE-PROMSORT_assignments" displayName="PROMETHEE-PROMSORT_assignments" version="1.0.0"/>
    <documentation>
        <description>Computes class assignment for given alternatives using Promsort method.</description>
        <contact><![CDATA[Maciej Uniejewski <maciej.uniejewski@gmail.com>]]></contact>
        <url>https://github.com/maciej7777/PrometheeDiviz</url>
    </documentation>
    <parameters>
        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Alternatives to consider.</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>

        <input id="input2" name="categories" displayName="categories" isoptional="0">
            <documentation>
                <description>Definitions of classes and their marks (higher mark means better class). Each class need to have unique mark from 1 to C, where C is a number of classes. </description>
            </documentation>
            <xmcda tag="categories"/>
            <xmcda tag="categoriesValues"/>
        </input>

        <input id="input3" name="categories_profiles" displayName="categories profiles" isoptional="0">
            <documentation>
                <description>Definitions of boundary profiles which should be used for classes (categories)
                    representation.
                </description>
            </documentation>
            <xmcda tag="categoriesProfiles"/>
        </input>

        <input id="input4" name="performance_table" displayName="profiles performances" isoptional="0">
            <documentation>
                <description>The performances of boundary profiles.</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>

        <input id="input5" name="criteria" displayName="criteria" isoptional="0">
            <documentation>
                <description>Definitions of criteria, their scales and preference thresholds. </description>
            </documentation>
            <xmcda tag="criteria"/>
            <xmcda tag="criteriaScales"/>
            <xmcda tag="criteriaThresholds"/>
        </input>

        <input id="input6" name="positive_flows" displayName="positive flows" isoptional="0">
            <documentation>
                <description>Positive flows of given alternatives and boundary profiles.</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </input>

        <input id="input7" name="negative_flows" displayName="negative flows" isoptional="0">
            <documentation>
                <description>Negative flows of given alternatives and boundary profiles.</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </input>

        <input id="input8" name="method_parameters" displayName="method parameters"
               isoptional="0">
            <documentation>
                <description>A set of parameters provided to tune up the module's operation.</description>
            </documentation>
            <xmcda tag="programParameters">
                <![CDATA[
                <programParameters>
                    <parameter id="cutPoint">
                        <values>
                            <value>
                                <real>%1</real>
                            </value>
                        </values>
                    </parameter>
                    <parameter id="assignToABetterClass">
                        <values>
                            <value>
                                <boolean>%2</boolean>
                            </value>
                        </values>
                    </parameter>
                </programParameters>
	        ]]>
            </xmcda>
            <gui status="preferFile">
                <entry id="%1" type="float" displayName="cut point">
                    <documentation>
                        <description>Parameter used in a second phase of PromSort method. Determines the impact of assigning alternatives to better/worse categories.</description>
                    </documentation>
                    <constraint>
                        <description>The value should be between -1.0 and 1.0 (both included).</description>
                        <code>
                            <![CDATA[ %1 <= 1.0 && %1 >= -1.0 ]]>
                        </code>
                    </constraint>
                </entry>
                <entry id="%2" type="boolean" displayName="assign to a better class">
                    <documentation>
                        <description>Information if alternative will be assigned to a better class when the assignment is not
                            clear. Works only if cut point does unclear output for alternative.</description>
                    </documentation>
                    <defaultValue>true</defaultValue>
                </entry>
            </gui>
        </input>

        <output id="output1" name="first_step_assignments" displayName="first step assignments">
            <documentation>
                <description>Assignments made in a first step of PromSort process.</description>
            </documentation>
            <xmcda tag="alternativesAssignments"/>
        </output>

        <output id="output2" name="final_assignments" displayName="final assignments">
            <documentation>
                <description>Final assignments made in a PromSort process.</description>
            </documentation>
            <xmcda tag="alternativesAssignments"/>
        </output>

        <output id="output3" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="programExecutionResult"/>
        </output>

    </parameters>
</program_description>