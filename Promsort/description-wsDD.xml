<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
    <program provider="PUT" name="Promsort" displayName="Promsort" version="1.0.0" />
    <documentation>
        <description>Computes class assignment fro given alternatives using Promsort method.
        </description>
        <url>https://github.com/maciej7777/PrometheeDiviz</url>
    </documentation>
    <parameters>
        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Alternatives to consider.</description>
            </documentation>
            <xmcda tag="alternatives" />
        </input>

        <input id="input2" name="categories" displayName="categories" isoptional="0">
            <documentation>
                <description>Definitions of classes and their ranks</description>
            </documentation>
            <xmcda tag="categoriesValues" />
        </input>

        <input id="input3" name="categories_profiles" displayName="categories_profiles" isoptional="0">
            <documentation>
                <description>Definitions of boundary profiles which should be used for classes (categories) representation.</description>
            </documentation>
            <xmcda tag="categoriesProfiles" />
        </input>

        <input id="input4" name="negative_flows" displayName="negative_flows" isoptional="0">
            <documentation>
                <description>Negative flows of given alternatives and boundary profiles.</description>
            </documentation>
            <xmcda tag="categoriesProfiles" />
        </input>

        <input id="input5" name="positive_flows" displayName="positive_profiles" isoptional="0">
            <documentation>
                <description>Negative flows of given alternatives and boundary profiles.</description>
            </documentation>
            <xmcda tag="categoriesProfiles" />
        </input>

        <input id="input6" name="method_parameters" displayName="assignToABetterClass"
               isoptional="0">
        <documentation>
            <description>Information if alternative will be assigned to a beeter class when the assignment is not clear.</description>
        </documentation>
        <xmcda tag="methodParameters">
            <![CDATA[
                <methodParameters>
                    <parameter name="assignToABetterClass">
                        <value>
                            <boolean>%1</boolean>
                        </value>
                    </parameter>
                </methodParameters>
	        ]]>
        </xmcda>
        </input>

        <output id="output1" name="first_step_assignments" displayName="first_step_assignments">
            <documentation>
                <description>Assignments made in a first step of Promsort process.</description>
            </documentation>
            <xmcda tag="alternativesAssignments" />
        </output>

        <output id="output2" name="final_assignments" displayName="final_assignments">
            <documentation>
                <description>Final assignments made in a Promsort process.</description>
            </documentation>
            <xmcda tag="alternativesAssignments" />
        </output>

        <output id="output3" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="methodMessages" />
        </output>

    </parameters>
</program_description>